extends layout

block stylesheets
	link(rel='stylesheet', href='/stylesheets/index.css')

block scripts
	script(src='/javascripts/index.js')

block content
	h1= title
	p Welcome to #{title}
	div(id='ulSignInOrUp')
		ul
			li
				a(href='#tabSignIn') 
					span(id='index_signin', class='tnLabel') Sign in
			li
				a(href='#tabSignUp')
					span(id='index_signup', class='tnLabel') Sign up
		div(id='tabSignIn')
			div(class='row')
				div(class='col-md-2')
					span(id='index_userid', class='tnLabel') ユーザーID
				div(class='col-md-2')
					input(type='text', id='txtUser')
			div(class='row')
				div(class='col-md-2')
					span(id='index_password', class='tnLabel') パスワード
				div(class='col-md-2')
					input(type='password', id='txtPass')
				div(class='col-md-2 pull-right')
					input(type='button', id='btnSignIn', value='Sign in')
		div(id='tabSignUp')
			div(class='row')
				div(class='col-md-2')
					span(id='index_userid', class='tnLabel') ユーザーID
				div(class='col-md-2')
					input(type='text', id='txtUserUp')
			div(class='row')
				div(class='col-md-2')
					pspan(id='index_email', class='tnLabel') メールアドレス
				div(class='col-md-2')
					input(type='text', id='txtEmailUp')
			div(class='row')
				div(class='col-md-2')
					span(id='index_password', class='tnLabel') パスワード
				div(class='col-md-2')
					input(type='password', id='txtPassUp')
			div(class='row')
				div(class='col-md-2')
					span(id='index_pwdconf', class='tnLabel') パスワード確認
				div(class='col-md-2')
					input(type='password', id='txtPassUpConfirm')
				div(class='col-md-2 pull-right')
					input(type='button', id='btnSignUp', value='Sign up')
